<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePage"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/stageCount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/misaeng"
                    android:text="스테이지:0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/moveCount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/misaeng"
                        android:text="이동횟수:0"
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/tv_min_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:gravity="end"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/misaeng"
                        android:text="최소횟수:0"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/banner2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tv_remain_animal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/misaeng"
                    android:text=" 남은동물"
                    android:textSize="25dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/widget_dog"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:src="@drawable/dog"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/widget_squirrel"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:src="@drawable/squirrel"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/widget_rabbit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:src="@drawable/rabbit"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/widget_panda"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:src="@drawable/panda"
                        android:adjustViewBounds="true"/>
                    <ImageView
                        android:id="@+id/widget_tiger"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:visibility="gone"
                        android:src="@drawable/tiger"
                        android:adjustViewBounds="true"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <gang.il.GameSurfaceView
            android:id="@+id/GameSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/back_btn" />
        <ImageView
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/reset_btn" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>
    </LinearLayout>
</FrameLayout>