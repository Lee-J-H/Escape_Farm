<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/> <!-- 백그라운드 이미지 추가 될 곳-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1"> <!--버튼 위 여백-->
        <TextView
            android:layout_width="0.dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8" />
            <ImageView
                android:id="@+id/sound_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/sound_on"
                />
            </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/> <!--버튼 좌측 여백-->

            <Button
                android:id="@+id/classic_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="낮에 탈출하기"
                android:textSize="50dp"
                android:fontFamily="@font/misaeng"
                android:layout_weight="0.6"
                android:background="@drawable/main_btn"/>  <!--주간모드버튼-->
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/> <!--버튼 좌측 여백-->

            <Button
                android:id="@+id/blind_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="밤에 탈출하기"
                android:textSize="50dp"
                android:fontFamily="@font/misaeng"
                android:layout_weight="0.6"
                android:background="@drawable/main_btn"/>  <!--야간모드버튼-->
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/> <!--버튼 좌측 여백-->

            <Button
                android:id="@+id/gameOff_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="게임 종료"
                android:textSize="50dp"
                android:fontFamily="@font/misaeng"
                android:layout_weight="0.6"
                android:background="@drawable/main_btn"/>  <!--게임종료버튼-->
        </LinearLayout>
    </LinearLayout>

</FrameLayout>